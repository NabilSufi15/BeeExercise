<Window x:Class="BeesExercise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeesExercise"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBees" HorizontalAlignment="Left" Height="292" VerticalAlignment="Top" Width="291" Margin="58,48,0,0" SelectionChanged="listBoxBees_SelectionChanged"/>
        <TextBlock x:Name="Type" HorizontalAlignment="Left" Height="23" Margin="553,179,0,0" TextWrapping="Wrap" Text="Type:" VerticalAlignment="Top" Width="108" RenderTransformOrigin="2.4,0.328"/>
        <TextBlock x:Name="Health" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Health:" VerticalAlignment="Top" Margin="553,218,0,0"/>
        <TextBlock x:Name="Alive" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Alive: " VerticalAlignment="Top" Margin="553,250,0,0"/>
        <Button x:Name="damage" Content="Damage" HorizontalAlignment="Left" Margin="568,299,0,0" VerticalAlignment="Top" Width="75" Click="damage_Click"/>
    </Grid>
</Window>
